#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_xxxxxxx
#build/xxxxxxxd::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_xxxxxxx)

DEB_INSTALL_EXAMPLES_xxxxxxxd += debian/examples/*
DEB_INSTALL_MANPAGES_xxxxxxxd += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix xxxxxxxd
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f xxxxxxx-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake xxxxxxx-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_xxxxxxx
	src/test_xxxxxxx

# Ensure wrapper is set executable
binary-post-install/xxxxxxxd:
	chmod +x $(cdbs_curdestdir)usr/bin/xxxxxxxd
binary-post-install/xxxxxxx-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/xxxxxxx-qt
