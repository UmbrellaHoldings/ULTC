#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_siliconvalley
#build/siliconvalleyd::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_siliconvalley)

DEB_INSTALL_EXAMPLES_siliconvalleyd += debian/examples/*
DEB_INSTALL_MANPAGES_siliconvalleyd += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix siliconvalleyd
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f siliconvalley-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake siliconvalley-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_siliconvalley
	src/test_siliconvalley

# Ensure wrapper is set executable
binary-post-install/siliconvalleyd:
	chmod +x $(cdbs_curdestdir)usr/bin/siliconvalleyd
binary-post-install/siliconvalley-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/siliconvalley-qt
